<main>

  <section id="content"></section>

  <div id="player_container">
    <div id="player"></div>
  </div>
  <div id="seperator"></div>

</main>

<div id="controls"></div>

<script type="text/handlebars-x" id="vid_thumb_partial" class="partial">
  <div href="{{href}}" class="wrapper" id="wrapper_{{ id }}">
    <div class="edit_bar">
      <a class="delete_wrapper"></a>
      <a class="edit_wrapper"></a>
    </div>
    <figure
    data-vid_id={{id}}>
      <img src="{{img}}" alt="{{description}}">
      <figcaption
        {{#if (isHebrew title)}}
          style="direction: rtl"
        {{/if}}>
        {{{shortenTitle title}}}
      </figcaption>
    </figure>
  </div>
</script>

<script type="text/handlebars-x" id="empty_wrapper_template">
<div href="#" class="wrapper empty" id="wrapper_undefined">
  <div class="edit_bar">
    <a class="delete_wrapper"></a>
    <a class="edit_wrapper"></a>
  </div>
</div>
</script>

<script type="text/handlebars-x" id="thumbnails_template">
  {{#each vids}}
    {{> vid_thumb_partial}}
  {{/each}}
</script>

<script type="text/handlebars-x" id="search_header_template">
  <p style="direction: rtl;">מציג תוצאות עבור:</p><span id="query">{{title}}</span>
</script>

<script type="text/handlebars-x" id="playlist_header_template">
  <img src="{{snippet.thumbnails.medium.url}}" alt="{{snippet.description}}">
  <span id="query"
    {{#if (isHebrew snippet.title)}}
      style="direction: rtl"
    {{/if}}>
  {{snippet.title}}</span>
  </script>

<script type="text/handlebars-x" id="channel_header_template">
  <img src="{{snippet.thumbnails.medium.url}}" alt="{{snippet.description}}">
  <span id="query"
    {{#if (isHebrew snippet.title)}}
      style="direction: rtl"
    {{/if}}>
  {{snippet.title}}</span>
</script>

<script type="text/handlebars-x" id="feed_header_template">
  <a href="#" class="icon" id="edit_feed"><i data-feather="edit-2"></i></a>
  <span id="query">מסך חיפושים שמורים</span>
</script>

<script type="text/handlebars-x" id="related_vids_header_template">
  <img src="{{snippet.thumbnails.medium.url}}" alt="{{snippet.description}}">
  <span id="query"
    {{#if (isHebrew snippet.title)}}
      style="direction: rtl"
    {{/if}}
  >{{snippet.title}}</span><p style="direction: rtl">סרטונים קשורים:</p>
</script>

<script type="text/handlebars-x" id="ga_break_button_template">
  <div class="button clickable" id="ga_break_toggle">
    <p>לראות</p>
  </div>
</script>

<script type="text/handlebars-x" id="nav_controls_template">
  <div class="button nav_control" id="new_search">
    <p>חיפוש חדש</p>
  </div>

  <div class="button nav_control" id="pg_up">
    <p>סרטונים קודמים</p>
  </div>

  <div class="button nav_control" id="pg_down">
    <p>סרטונים נוספים</p>
  </div>
</script>

<script type="text/handlebars-x" id="play_controls_template">
  <div class="button play_control" id="play_toggle">
    <p>נגן</p>
  </div>

  <div class="button play_control" id="related_videos">
    <p>סרטונים קשורים</p>
  </div>

  <div class="button play_control" id="exit">
    <p>יציאה</p>
  </div>
</script>

<script type="var" id="user_id"><%= @user_id %></script>
<script type="text/javascript" src="javascripts/youtube_script.js"></script>
<script type="text/javascript" src="javascripts/results.js"></script>
